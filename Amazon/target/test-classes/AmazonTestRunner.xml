<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon Automation Test" parallel="false">
    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
<!--    <parameter name="os" value="Windows"/>-->
<!--    <parameter name="os_version" value="10"/>-->
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="catalina"/>
    <parameter name="browserName" value="chrome-options"/>
    <parameter name="browserVersion" value="85.0"/>
    <parameter name="url" value="https://www.amazon.com/"></parameter>

    <test name="Amazon Home">
        <classes>

            <class name="testhome.HomePageTest"></class>
            <class name="search.SearchTest"></class>
            <class name="datadriven.DataSource"></class>
        </classes>

    </test>

</suite>