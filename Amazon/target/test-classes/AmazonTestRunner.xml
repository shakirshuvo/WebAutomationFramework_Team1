<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="Amzon Automation Test" parallel="false">


    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="catalina"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="85.0"/>
    <parameter name="url" value="https://www.amazon.com/"/>


    <test name="amazon Home">
        <classes>
            <class name="search.SearchTest">
                <methods>
                     <exclude name="setSearchFieldTest"></exclude>
                </methods>
            </class>
            <class name="home.HomePageTest">
                <methods>
                    <exclude name="setBestSellerTest"></exclude>
                    <exclude name="setCustomerServiceTest"></exclude>
                    <exclude name="setTodayDealTest"></exclude>
                    <exclude name="setNewReleaseTest"></exclude>
                    <exclude name="setFindGiftTest"></exclude>
                    <exclude name="setGiftCardTest"></exclude>
                    <exclude name="setWholeFoodTest"></exclude>
                    <exclude name="setFreeShippingTest"></exclude>
                    <exclude name="setSellButtonTest"></exclude>
                    <exclude name="setCouponsTest"></exclude>
                    <exclude name="setPrimeVideoTest"></exclude>
<!--                    <exclude name="testSearchBoxCheckGetItemsListFromExcel"></exclude>-->

                </methods>
            </class>
            <class name="regressionTest.BrokensLinksTest">
                <methods>
                    <exclude name="AmazonLinksActivlinksTest"></exclude>
                </methods>
            </class>

        </classes>

    </test>


</suite>